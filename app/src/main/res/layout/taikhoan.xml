<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <TableRow
        android:id="@+id/trTaiKhoan"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/account_dentrang" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Thông tin tài khoản"
            android:fontFamily="Arial"
            android:textColor="#000000"
            android:textSize="18dp"/>
        <me.grantland.widget.AutofitTextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:maxLines="1"
            android:textSize="40sp"
            autofit:minTextSize="10sp"
            android:id="@+id/txtInforAccount"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/go_dentrang"/>
    </TableRow>


    <TableRow
        android:id="@+id/trAddress">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/address" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Địa chỉ"
            android:fontFamily="Arial"
            android:textColor="#000000"
            android:textSize="18dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:id="@+id/txtAddress"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/go_dentrang"/>
    </TableRow>
    <TableRow
        android:id="@+id/trMoney">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/money" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Số dư tài khoản"
            android:fontFamily="Arial"
            android:textColor="#000000"
            android:textSize="18dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:id="@+id/txtMoney"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/go_dentrang"/>
    </TableRow>
    <TableRow
        android:id="@+id/trKey">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/key" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Đổi mật khẩu"
            android:fontFamily="Arial"
            android:textColor="#000000"
            android:textSize="18dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:id="@+id/txtPass"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/go_dentrang"/>
    </TableRow>

    <TableRow
        android:id="@+id/trLogout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/signout" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="Đăng xuất"
            android:fontFamily="Arial"
            android:textColor="#000000"
            android:textSize="18dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="4dp"
            android:contentDescription="here"
            android:src="@drawable/go_dentrang"/>
    </TableRow>

</TableLayout>